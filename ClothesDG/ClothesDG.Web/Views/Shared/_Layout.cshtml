@{
    string CurrentURL = this.Context.Request.Path;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clothing_Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/font-awesome.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/slick.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/slick-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mg-animations.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/mg-menu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/jquery.highlight.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/magnific-popup.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/spinner.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/price-range-slider.css" asp-append-version="true" />

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>

    <link rel="icon" type="image/x-icon" href="~/favicon.ico" asp-append-version="true">
    <partial name="_ValidationScriptsPartial" />
</head>
<body class="home-2">

    <partial name="_LoadingPartial" />

    @if (this.ViewBag.IsHomePage)
    {
            <header class="mg-transparent-header">
                <partial name="_NavigationHomePartial" />
            </header>        
    }
    else
    {
        if (!CurrentURL.Contains("Administration"))
        {
            <header>
                <partial name="_GlobalNavigationPartial" />
            </header>
        }
    }

    <div class="modal fade mg-quick-view-modal-outer" id="mg-quick-view-modal" tabindex="-1" aria-labelledby="mg-quick-view-modal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
        </div>
    </div>
    <main role="main">
        @RenderBody()
    </main>

    @* <partial name="_FooterPartial" /> *@

    
    <script src="~/js/popper.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.magnific-popup.js" asp-append-version="true"></script>
    <script src="~/js/jquery.highlight.js" asp-append-version="true"></script>
    <script src="~/js/slick.js" asp-append-version="true"></script>
    <script src="~/js/mg-menu.js" asp-append-version="true"></script>
    <script src="~/js/mg-product.js" asp-append-version="true"></script>
    <script src="~/js/mg-collection.js" asp-append-version="true"></script>
    <script src="~/js/mg-home-2.js" asp-append-version="true"></script>
    <script src="~/js/price-range-slider.js" asp-append-version="true"></script>
    <script src="~/js/mg-common.js" asp-append-version="true"></script>
    <script>
        function displayBusyIndicator() {
            var loadingDiv = document.getElementById('loading');
            loadingDiv.style.visibility = 'visible';
        }
        $(window).on('beforeunload', function () {
            displayBusyIndicator();
        });
    </script>
    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
